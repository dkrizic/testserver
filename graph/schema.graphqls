# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Tag {
  id: String!
  name: String!
  assets: [Asset!]!
}

input NewTag {
  name: String!
}

type Asset {
  id: ID!
  name: String!
  tagValues: [TagValue!]!
}

input NewAsset {
  name: String!
}

input Search {
  text: String!
  searchTagName: Boolean! = true
  searchTagValue: Boolean! = true
  searchAssetName: Boolean! = true
}

type SearchResult {
  tags: [Tag!]!
  assets: [Asset!]!
  tagValues: [TagValue!]!
}

type Query {
  tags(id:ID): [Tag!]!
  assets(id:ID): [Asset!]!
  tagValues(id:ID): [TagValue!]!
  search(input: Search!): SearchResult!
}

type TagValue {
  id: ID!
  tag : Tag!
  asset: Asset!
  value: String!
}

input NewTagValue {
  tagID: ID!
  assetID: ID!
  value: String!
}

input UpdateTagValue {
  id: ID!
  value: String!
}

input DeleteTagValue {
  id: ID!
}

type Mutation {
  createTag(input: NewTag!): Tag!
  createAsset(input: NewAsset!): Asset!
  createTagValue(input: NewTagValue!): TagValue!
  updateTagValue(input: UpdateTagValue!): TagValue!
  deleteTagValue(input: DeleteTagValue!): TagValue!
}
